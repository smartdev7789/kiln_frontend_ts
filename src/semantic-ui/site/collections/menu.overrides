/*******************************
         Site Overrides
*******************************/

.ui.menu {
    border-radius: 0;
    border: none;
    box-shadow: 0px 0.1em 0.25em 0 rgba(34, 36, 38, 0.15);
}

.ui.menu .item {
    color: rgba(0, 0, 0, 0.50);
}

.ui.menu .active.item {
    border-bottom: 0.15em grey solid;
}

.ui.menu .item:before {
    background: none;
}